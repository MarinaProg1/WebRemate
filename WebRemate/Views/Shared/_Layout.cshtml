<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - VCL Remates</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="~/css/site.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom">
        <div class="container-fluid">
            <!-- Botón para mostrar/ocultar la sidebar -->
            <button id="sidebarToggle" class="btn btn-primary me-2">
                <i class="fas fa-bars"></i> Menú
            </button>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <form asp-controller="Autenticacion" asp-action="Logout" method="post">
                                <button type="submit" class="btn btn-link nav-link">Cerrar Sesión</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Autenticacion" asp-action="Login">Iniciar Sesión</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="d-flex flex-column min-vh-100">
        <div class="d-flex flex-grow-1">
            <!-- Sidebar -->
            <div class="sidebar text-white p-3" id="sidebar">
                <img src="~/imagenes/LOGO.png" alt="Menú" class="img-fluid d-block mx-auto mb-3" />
                <a class="nav-link text-black" asp-area="" asp-controller="Autenticacion" asp-action="Registrarse">Registrarse</a>
                <a class="nav-link text-black" asp-area="" asp-controller="Home" asp-action="QuienesSomos">Sobre nosotros</a>
                <a class="nav-link text-black" asp-area="" asp-controller="Home" asp-action="Preguntas">Preguntas frecuentes</a>
                <a class="nav-link text-black" asp-area="" asp-controller="Remate" asp-action="Index">Todos los remates</a>
                <a class="nav-link text-black" asp-area="" asp-controller="Remate" asp-action="SubastasActivas">Remates activos</a>
                <a class="nav-link text-white" asp-area="" asp-controller="Remate" asp-action="OfertasGanadoras">Ofertas ganadoras</a>
            </div>

            <div class="content flex-grow-1 p-3">
                <main role="main" class="container">
                    @RenderBody()
                </main>
                @RenderSection("Scripts", required: false)
            </div>
        </div>
    </div>

    <footer class="bg-white text-dark text-center py-3 flex-shrink-0">
        <div class="container">
            <p class="mb-0">&copy; @DateTime.Now.Year - VCL Remates. Todos los derechos reservados.</p>
            <p class="mb-0">UTN Tecnicatura Universitaria en Programación</p>
        </div>
    </footer>

    <!-- Scripts -->
    @Html.Raw("<script src=\"https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js\"></script>")
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.getElementById("sidebarToggle").addEventListener("click", function() {
            document.getElementById("sidebar").classList.toggle("open");
        });
    </script>
    

</body>
</html>
