
@model List<WebRemate.Models.RemateViewModels>

<h2>Remates Activos</h2>

<div class="row">
    @foreach (var remate in Model)
    {
        <div class="col-md-4 mb-4">
            <!-- Cada card ocupa 1/3 del ancho -->
            <div class="card" style="width: 100%;">
                <img src="~/imagenes/LOGO.png" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@remate.Titulo</h5>
                    <p class="card-text">@remate.Descripcion</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Categoría: @remate.Categoria</li>
                    <li class="list-group-item">Fecha de cierre: @remate.FechaCierre.ToString("dd/MM/yyyy")</li>
                    <li class="list-group-item">Estado: @remate.Estado</li>
                </ul>
                <div class="card-body">
                    <a asp-controller="Producto" asp-action="ProductosPorRemate" asp-route-idRemate="@remate.IdRemate" class="card-link">Ver más</a>
                    <a asp-controller="Producto" asp-action="Publicar" asp-route-idRemate="@remate.IdRemate" class="card-link">Publicar productos</a>
                </div>
            </div>
        </div>
    }
</div>
